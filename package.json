{
  "name": "clean-architecture",
  "description": "A Node template that follows the Clean Architecture principles and encourages established practices.",
  "author": "Jamie Livingstone",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint": "tsc --noEmit && eslint .",
    "start": "tsnd --respawn --exit-child -r dotenv/config -r tsconfig-paths/register src/web/api/server.ts",
    "test": "jest",
    "test:unit": "jest --selectProjects unit-tests",
    "test:functional": "jest --selectProjects functional-tests",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.{ts,js,json,md,yml}": "prettier --write"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "awilix": "^8.0.0",
    "express": "^4.18.1",
    "helmet": "^6.0.0",
    "swagger-ui-express": "^4.5.0",
    "winston": "^3.8.1",
    "yup": "^1.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^29.4.0",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "jest": "^29.4.0",
    "jest-mock-extended": "^3.0.3",
    "lint-staged": "^13.0.3",
    "pg": "^8.8.0",
    "prettier": "^2.7.1",
    "prisma": "^4.11.0",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.8.2"
  }
}
